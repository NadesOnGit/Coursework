@startuml
actor Surveyor as "Surveyor"

rectangle Database

rectangle "Population information system" {
    usecase UC1 as "Get report
                    on population
                    organised in
                    descending
                    order"
    usecase UC2 as "Get report
                    on population
                    where x is
                    given by the
                    user organised
                    in descending
                    order"
    usecase UC3 as "Get report on
                    population
                    of cities
                    in the world
                    organised in
                    descending order"
    usecase UC4 as "Get report on
                    most populous
                    cities where x
                    is given by the
                    user"
    usecase UC5 as "Get report on
                    most populous
                    capital cities
                    where x is given
                    by the user"
    usecase UC6 as "Get population
                    of the world"
    usecase UC7 as "Get percentage
                    of people that
                    speak Chinese"
    usecase UC8 as "Get report on
                    most populous
                    captial cities
                    in the world
                    with x given
                    by the user"


    Surveyor - UC1
    Surveyor - UC2
    Surveyor - UC3
    Surveyor - UC4
    Surveyor - UC5
    Surveyor - UC6
    Surveyor - UC7
    Surveyor - UC8

    UC1 - Database
    UC2 - Database
    UC3 - Database
    UC4 - Database
    UC5 - Database
    UC6 - Database
    UC7 - Database
    UC8 - Database
}


@enduml